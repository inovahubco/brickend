@asynccontextmanager
async def lifespan(app: FastAPI):
    """
    Create all tables in the database on startup.
    """
    print("ğŸ”„ Creating database tables...")
    print(f"ğŸ”§ Engine: {engine}")
    print(f"ğŸ“‹ Tables to create: {list(Base.metadata.tables.keys())}")
    try:
        Base.metadata.create_all(bind=engine)
        print("âœ… Database tables created successfully")

        # Verify tables were created
        from sqlalchemy import inspect
        inspector = inspect(engine)
        existing_tables = inspector.get_table_names()
        print(f"ğŸ“Š Tables in database: {existing_tables}")
    except Exception as e:
        print(f"âŒ Error creating tables: {e}")
        import traceback
        traceback.print_exc()
    yield
    print("ğŸ”š Application shutdown")

app = FastAPI(
    title="{{ project_name | default('FastAPI App') }}",
    version="{{ project_version | default('0.1.0') }}",
    lifespan=lifespan
)

